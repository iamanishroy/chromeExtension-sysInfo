{
  "manifest_version": 2,
  "name": "SystemInfo",
  "description": "Information about your System",
  "version": "1.0.0",
  "icons": {
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://127.0.0.1:5500/*", "https://sysinfo.netlify.app/*"],
      "all_frames": true,
      "js": ["content-script.js"]
    }
  ],
  "permissions": ["activeTab", "system.cpu", "system.memory", "system.storage"]
}
