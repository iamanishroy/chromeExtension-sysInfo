{
  "manifest_version": 3,
  "name": "SystemInfo",
  "description": "Information about your System",
  "version": "1.0.0",
  "icons": {
    "128": "icon_128.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": ["http://127.0.0.1:5500/*", "https://sysinfo.netlify.app/*"]
  },
  "permissions": ["activeTab", "system.cpu", "system.memory", "system.storage"]
}
